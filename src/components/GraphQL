const { ApolloServer, gql } = require("apollo-server");

// These are called properties
// Scalar types: Int, Float, String, Boolean
const typeDefs = gql`
type Query {
    Address: String
    CarMake: String
    CarModel: Int
    CarYear: Int
    CoverageLevel: Int
    Credit: Int
    CurrentInsurer: String
}

type component {
    Address: String!
    CarMake: String!
    CarModel: Int!
    CarYear: Int!
    CoverageLevel: Int!
    Credit: Int!
    CurrentInsurer: String!
}
`;

const components = [
    {
      street: "1101 Central Expy",
      apt: "250",
      city: "Allen",
      zip: 75013,
    },
    {
      modelName: ""
    }
  ];

const resolvers = {
    Query: {
        address: () => {
            return ['address'];
        },
        carMake: () => {
            return ['carMake'];
        },
        carModel: () => {
            return ['carModel'];
        },
        carYear: () => {
            return ['carYear'];
        },
        }
}

const server = new ApolloServer({
    typeDefs,
    resolvers
});

server.listen().then(({url}) => {
    console.log("Server is ready at " + url);
});